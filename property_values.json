{




    "property_main.json": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "type": "object",
        "properties": {
            "block": {
                "type":"string",
                "description": "Property block designation"
            },
            "has_address": {
                "type": "object",
                "properties": {
                    "city_name": {"type":"string"},
                    "country_code": {"type":"string"},
                    "county_name": {"type":"string"},
                    "postal_code": {"type":"string"},
                    "sequence_number": {"type": ["string", "integer", "null"]},
                    "state_code": {"type":"string", "maxLength": 2},
                    "street_name": {"type":"string"},
                    "street_post_directional_text": {"type":"string"},
                    "street_pre_directional_text": {"type":"string"},
                    "street_suffix_type": {"type":"string"},
                    "unit_identifier": {"type":"string"}
                },
                "additionalProperties": false
            },
            "has_owner": {
                "type":"array",
                "items": {
                    "type": "object",
                    "properties": {
                        "mailing_address": {
                            "type": "object",
                            "properties": {
                                "address_line_1": {"type":"string"},
                                "city_name": {"type":"string"},
                                "country_name": {"type":"string"},
                                "postal_code": {"type":"string"},
                                "state_code": {"type":"string", "maxLength": 2}
                            },
                            "additionalProperties": false
                        },
                        "name": {"type":"string"},
                        "first_name": {"type":"string"},
                        "last_name": {"type":"string"},
                        "middle_name": {"type":"string"},
                        "prefix_name": {"type":"string"},
                        "raw_name": {"type":"string"},
                        "suffix_name": {"type":"string"}
                    },
                    "additionalProperties": false
                }
            },
            "has_property_valuations": {
                "type":"array",
                "items": {
                    "type": "object",
                    "properties": {
                        "actual_value": {
                            "type": "decimal",
                            "minimum": 0,
                            "description": "Actual valuation happens as a result of real sales transaction."
                        },
                        "valuation_date": {
                            "type":"string",
                            "format": "date",
                            "description": "The date on which the property valuation was estimated or determined in YYYY-MM-DD format"
                        },
                        "valuation_method_type": {
                            "type":"string",
                                      "description": "The methodology or approach used to estimate the property's value, as represented by a specific enumeration type.",

                            "enum": [
                                        "SalesTransaction"
                                      ],
                        }
                    },
                    "additionalProperties": false
                }
            },
            "lot": {"type":"string"},
            "property_assessed_value_amount": {
                "type": "integer",
                "minimum": 0,
                "description": "Assessed value of the property"
            },
            "property_exemption_amount": {
              "type": "decimal",
              "description": "The reduction amount applied to the assessed value, often based on exemptions like homestead, to determine the taxable value."
            },
            "property_structure_built_year": {
              "type": "integer",
              "description": "The year in which the dwelling on the property was completed.In Version 2, was Structure Year Built."
            },
            "property_type": {
                "type":"string",
                "description": "Type of property (residential, commercial, etc.)",
               "enum": [
            "Cooperative",
            "Condominium",
            "Modular",
            "ManufacturedHousingMultiWide",
            "Pud",
            "Timeshare",
            "2Units",
            "DetachedCondominium",
            "Duplex",
            "SingleFamily",
            "TwoToFourFamily",
            "MultipleFamily",
            "3Units",
            "ManufacturedHousing",
            "ManufacturedHousingSingleWide",
            "4Units",
            "Townhouse",
            "NonWarrantableCondo",
            "Other"
          ]

            },
            "sales_transactions": {
                "type":"array",
                "items": {
                    "type": "object",
                    "properties": {
                        "sales_date": {
                          "type": "date",
                          "description": "The date of the transfer of ownership of real property as recognized in the jurisdiction in which it is located."
                        },
                        "sales_transaction_amount": {
                           "type": "decimal",
                          "description": "The amount of transaction (typically the sale price) related to the transfer of ownership of real property as recognized in the jurisdiction in which it is located."
                        }
                    },
                    "additionalProperties": false
                }
            }
        },
        "additionalProperties": false
    },

    "property_values.json": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "type": "object",
        "properties": {
            "property_assessed_value_amount": {
          "type": "decimal",
          "description": "The estimated value of the property used as the basis for property tax calculations for a given tax year."
        },
             "property_exemption_amount": {
          "type": "decimal",
          "description": "The reduction amount applied to the assessed value, often based on exemptions like homestead, to determine the taxable value."
        },
            "property_taxable_value_amount": {
          "type": "decimal",
          "description": "The final property value on which tax is calculated, derived by subtracting the exemption amount from the assessed value."
        },
        },
        "additionalProperties": false
    }
}